{
    "name": "yt-tray-app",
    "version": "1.0.0",
    "license": "ISC",
    "author": "Jboucly",
    "main": "dist/main/main.js",
    "description": "Youtube tray app using yt-dlp",
    "scripts": {
        "dev": "nodemon",
        "build:main": "tsc",
        "start:vue": "vite",
        "build:vue": "vite build",
        "start": "pnpm build && electron .",
        "build": "rimraf dist && pnpm build:vue && pnpm build:main && pnpm cpAssets",
        "dist": "electron-builder",
        "pack": "electron-builder --dir",
        "cpAssets": "cp -R assets dist/assets",
        "prettier": "prettier --write ."
    },
    "dependencies": {
        "@vicons/antd": "^0.13.0",
        "@vicons/ionicons5": "^0.13.0",
        "chalk": "^5.4.1",
        "electron-log": "^5.3.3",
        "naive-ui": "^2.41.0",
        "tsconfig-paths": "^4.2.0",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0"
    },
    "devDependencies": {
        "@types/node": "^22.14.1",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vue/tsconfig": "^0.7.0",
        "electron": "^35.1.5",
        "electron-builder": "^26.0.12",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "~5.7.2",
        "vite": "^6.2.0",
        "vue-tsc": "^2.2.4"
    },
    "build": {
        "appId": "com.exemple.yttray",
        "productName": "TrayTube",
        "files": [
            "dist/**/*",
            "src/**/*",
            "assets/**/*",
            "!**/node_modules/*/{test,__mocks__}/**"
        ],
        "extraResources": [
            {
                "from": "binaries/",
                "to": "binaries",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.png"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets"
        }
    }
}
