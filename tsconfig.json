{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/ui/*"]
        },
        "types": ["node", "electron"]
    },
    "include": ["src/**/*", "src/types/**/*.d.ts"]
}
